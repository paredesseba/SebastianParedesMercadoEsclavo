<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.LoginFragment">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="90dp"
        android:src="@drawable/mercadoesclavologo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/slogan" />

    <TextView
        android:id="@+id/slogan"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:textColor="#000"
        android:text="Esclavos de los mejores precios."
        android:textSize="33dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.facebook.login.widget.LoginButton
        android:id="@+id/btnloginfacebook"
        android:layout_width="175dp"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnlogingoogle"
        app:layout_constraintTop_toBottomOf="@+id/logo"
 />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/btnlogingoogle"
        android:layout_width="175dp"
        android:layout_height="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btniniciarsesion"
        app:layout_constraintTop_toBottomOf="@+id/btnloginfacebook"
        />

    <Button
        android:id="@+id/btniniciarsesion"
        android:layout_width="175dp"
        android:layout_height="35dp"
        android:elevation="5dp"
        android:background="#FFE600"
        android:text="INICIAR SESION"
        android:textColor="#000"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnlogingoogle"
        app:layout_constraintBottom_toTopOf="@id/btnregistrarme"/>


    <Button
        android:id="@+id/btnregistrarme"
        android:layout_width="175dp"
        android:layout_height="35dp"
        android:elevation="5dp"
        android:background="#000"
        android:textColor="#FFE600"
        android:text="REGISTRARME"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btniniciarsesion"
        app:layout_constraintBottom_toBottomOf="parent"/>




</androidx.constraintlayout.widget.ConstraintLayout>